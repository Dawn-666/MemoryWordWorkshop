<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 用户信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_avatar"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="英语学习者"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="ID: 12345678"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_member_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_member_tag"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="普通会员"
                        android:textColor="@color/purple_500"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/gray_400" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 学习数据统计 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- 今日学习 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="@color/purple_500"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="今日学习"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/gray_200" />

                <!-- 累计学习 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,258"
                        android:textColor="@color/purple_500"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="累计学习"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/gray_200" />

                <!-- 连续学习 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="@color/purple_500"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="连续学习"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 功能菜单 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- 我的收藏 -->
            <LinearLayout
                android:id="@+id/layout_my_favorites"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="我的收藏"
                    app:drawableStartCompat="@drawable/ic_favorite_border" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- 学习记录 -->
            <LinearLayout
                android:id="@+id/layout_learning_records"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="学习记录"
                    app:drawableStartCompat="@drawable/ic_history" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- 记忆统计 -->
            <LinearLayout
                android:id="@+id/layout_memory_stats"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="记忆统计"
                    app:drawableStartCompat="@drawable/ic_stats" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- 单词本管理 -->
            <LinearLayout
                android:id="@+id/layout_playlist_manage"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="单词本管理"
                    app:drawableStartCompat="@drawable/ic_book" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- 帮助与反馈 -->
            <LinearLayout
                android:id="@+id/layout_import"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="导入歌单(AI)"
                    app:drawableStartCompat="@drawable/ic_import_folder" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray_100" />

            <!-- 设置 -->
            <LinearLayout
                android:id="@+id/layout_settings"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="设置"
                    app:drawableStartCompat="@drawable/ic_settings" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- 关于我们 -->
            <LinearLayout
                android:id="@+id/layout_about"
                style="@style/MenuItemLayout">

                <TextView
                    style="@style/MenuItemText"
                    android:drawablePadding="16dp"
                    android:text="关于我们"
                    app:drawableStartCompat="@drawable/ic_info" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>